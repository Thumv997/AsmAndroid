<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <Button
        android:id="@+id/btn_addClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Lớp"/>

    <Button
        android:id="@+id/btn_viewlist_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem Danh Sách lớp"
        android:layout_below="@+id/btn_addClass"
        />

    <Button
        android:id="@+id/btn_QLSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý sinh viên"
        android:layout_below="@+id/btn_viewlist_class"/>

</RelativeLayout>